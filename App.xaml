<Application x:Class="ParoxInjector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ParoxInjector"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
                    <!--  TitleBar  -->
        <Style x:Key="TitleBar" TargetType="Border">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#151E3F"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
                    <!--  InfoBlock  -->
        <Style x:Key="InfoBlock" TargetType="TextBlock">
            <Setter Property="Margin" Value="90,0,0,0"/>
            <Setter Property="Foreground" Value="#FFCECEEC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontFamily" Value="Global Monospace"/>
        </Style>
                    <!--  TitleBlock  -->
        <Style x:Key="TitleBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCECEEC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
                    <!--  WindowToolPanel  -->
        <Style x:Key="WindowToolPanel" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
                    <!--  WindowTool  -->
        <Style x:Key="WindowTool" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#FFCECEEC"/>
        </Style>

                    <!--  ProcessInfoTextBlock  -->
        <Style x:Key="ProcessInfoTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Global Monospace"/>
        </Style>
    </Application.Resources>
</Application>
